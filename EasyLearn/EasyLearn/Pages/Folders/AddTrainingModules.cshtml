@page "{folderId:int}"
@model EasyLearn.Pages.Folders.AddTrainingModulesModel

@{
    ViewData["Title"] = "AddTrainingModules";
}

<h2>Training Modules in @Model.Folder.Name</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var module in Model.TrainingModulesInFolder)
        {
            <tr>
                <td>@module.Name</td>
                <td>@module.Description</td>
                <td>
                    <!-- Optional: Add a remove button if needed -->
                </td>
            </tr>
        }
    </tbody>
</table>

<h3>Add New Training Modules</h3>

<form method="post">
    <div class="form-group">
@*         <label for="TrainingModuleId">Select Training Module</label> *@
        <select asp-for="SelectedTrainingModuleId" class="form-control" asp-items="Model.TrainingModulesWithoutFolder">
            @* <option value=""></option> *@
            <option value="">-- Select Training Module --</option>

        </select>
    </div>
    <button type="submit" class="btn btn-primary">Add to Folder</button>
</form>

<div>
    <a asp-page="./Index">Back to Folder List</a>
</div>
