@page
@model EasyLearn.Resources.Pages.Folders.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Folder[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Folder[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Folder[0].Course)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Folder[0].Create)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Folder[0].LastOpen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Folder[0].IsLearned)
            </th>
            <th>
                Training Modules
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Folder)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Create)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastOpen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsLearned)
                </td>
                <td>
                    <ul>
                        @foreach (var module in item.TrainingModules)
                        {
                            <li>
                                @module.Name - @module.Description
                                <ul>
                                    @foreach (var card in module.Cards)
                                    {
                                        <li>@card.Term: @card.Definition</li>
                                    }
                                </ul>
                            </li>
                        }
                    </ul>
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
