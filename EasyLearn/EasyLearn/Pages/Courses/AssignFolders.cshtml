@page "{courseId:int}"
@model EasyLearn.Pages.Courses.AssignFoldersModel

@{
    ViewData["Title"] = "AssignFolders";
}

<h1>Assign Folders to @Model.Course.Name</h1>

<h3>Assigned Folders</h3>
@if (Model.Course.Folders.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var folder in Model.Course.Folders)
            {
                <tr>
                    <td>@folder.Name</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No folders have been assigned to this course yet.</p>
}

<h3>Assign New Folder</h3>

<form method="post">
    <div class="form-group">
        @* <label for="SelectedFolderId">Select Folder</label> *@
        <select asp-for="SelectedFolderId" class="form-control">
            <option value="">-- Select a Folder --</option>
            @foreach (var folder in Model.UnassignedFolders)
            {
                <option value="@folder.Id">@folder.Name</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Assign Folder</button>
</form>

<p>
    <a asp-page="./Details" asp-route-id="@Model.Course.Id">Back to Course Details</a>
</p>
