        <script>
            let debounceTimer;

            async function getQuery() {
                let query = document.getElementById("searchQuery").value;

                while (true) {
                    await new Promise(resolve => setTimeout(resolve, 700));

                    const tmp = document.getElementById("searchQuery").value;

                    if (query === tmp || !tmp.trim()) {
                        break;
                    } else {
                        query = tmp;
                    }
                }

                return query;
            }

            async function openSearchModal() {
                let query = await getQuery();

                if (!query.trim()) {
                    $('#searchModal').modal('hide');
                    return;
                }

                $('#searchModal').modal('show');

                // Затримка перед виконанням запиту (debounce)
                clearTimeout(debounceTimer);
                debounceTimer = setTimeout(() => {
                    // Виконати пошук (додайте вашу логіку пошуку)
                    fetch(`/Search/Search?query=${encodeURIComponent(query)}`)
                        .then(response => response.text())
                        .then(data => {
                            console.log(data);
                            // Вставляємо результати пошуку в модальне вікно
                            document.getElementById("searchResults").innerHTML = data;
                        })
                        .catch(error => {
                            console.error('Помилка при виконанні пошуку:', error);
                            document.getElementById("searchResults").innerHTML = "<p>Сталася помилка. Спробуйте знову.</p>";
                        });
                }, 300); // Виконуємо запит через 300 мс після введення тексту
            }

            document.getElementById("searchQuery").addEventListener("input", openSearchModal);

            // Додаємо подію для фокусу на полі вводу після відкриття модального вікна
            $('#searchModal').on('shown.bs.modal', function () {
                document.getElementById("searchQuery").focus(); // Установлюємо фокус на полі вводу
            });

            // Відслідковуємо події кліка поза модальним вікном
            $(document).on('click', function (e) {
                const modal = $('#searchModal');
                const searchInput = $('#searchQuery');

                // Якщо клік поза модальним вікном і поза полем вводу, закриваємо модальне вікно
                if (!modal.is(e.target) && modal.has(e.target).length === 0 && !searchInput.is(e.target)) {
                    modal.modal('hide');
                }
            });
        </script>
