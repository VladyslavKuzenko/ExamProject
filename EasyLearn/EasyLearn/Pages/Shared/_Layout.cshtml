                                    <label for="Name">Name</label>
                                    <input type="text" name="Name" class="form-control" value="" />
                                </div>
                                <div class="form-group">
                                    <label for="Description">Description</label>
                                    <input type="text" name="Description" class="form-control" value="" />
                                </div>
                                <div class="modal-footer">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                </div>
                            </form> *@
                        </div>
                    </div>
                </div>
            </div>
        </div>



        <div class="only-profile">
            <a id="manage" class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Profile</a>
        </div>

        <div class="language-selector">
            <partial name="_SelectLanguagePartial" />
        </div>

        <button class="mobile-menu-button" onclick="toggleMobileMenu()">&#9776;</button>

        <div class="mobile-menu" id="mobileMenu">
            <div class="menu-logo"></div>


            <a asp-area="" asp-page="/Home/Index">
                Home
                <div class="home-menu-image"></div>
            </a>
            <a asp-area="" asp-page="/TrainingModules/Index">
                Your Library
                <div class="library-menu-image"></div>
            </a>

            <a asp-area="" asp-page="/TrainingModules/Create">
                Create Module
                <div class="plimage1"></div>
            </a>
            <a asp-area="" asp-page="/Folders/Create">
                Create Folder
                <div class="plimage2"></div>
            </a>
            <a asp-area="" asp-page="/Courses/Create">
                Create Course
                <div class="plimage3"></div>
            </a>

            <a id="manage" class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Profile</a>
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link border-0 der">Logout</button>
                <div class="primage"></div>
            </form>

            <div class="mobile-language-selector">
                <partial name="_SelectLanguagePartial" />
            </div>
        </div>
    </header>





































    <div class="container">

        <main role="main" class="pb-3">
            @RenderBody()

        </main>
    </div>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>