        <div class="logo2">
            <a asp-area="" asp-page="/Home/Index"></a>
        </div>

        <nav class="nav-links">
            <a asp-area="" asp-page="/Home/Index">Home</a>
            <a asp-area="" asp-page="/TrainingModules/Index">Your Library</a>
