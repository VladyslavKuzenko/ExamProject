@page
@model EasyLearn.Pages.TrainingModules.IndexModel

@{
    ViewData["Title"] = "Index";
}


<body class="custom-background">

    <h1 class="create-title">Your library</h1>

    <div class="tabs">
        <a asp-area="" asp-page="/TrainingModules/Index" class="tab" style="color:cornflowerblue">Навчальні модулі</a>
        <a asp-area="" asp-page="//Index" class="tab" style="color:white">Папки</a>
        <a asp-area="" asp-page="//Index" class="tab" style="color:white">Курси</a>
    </div>
    <hr class="tab-line">

    <input type="search" class="s1" placeholder="Find module" />


</body>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TrainingModule[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrainingModule[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrainingModule[0].Create)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrainingModule[0].LastOpen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrainingModule[0].IsLearned)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrainingModule[0].Folder)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TrainingModule) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Create)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastOpen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsLearned)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Folder.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>|
                <a asp-page="../Cards/Index" asp-route-trainingModuleId="@item.Id">Add New Cards</a>

            </td>
        </tr>
}
    </tbody>
</table>
